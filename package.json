{
  "name": "the-long-walk",
  "version": "1.0.0",
  "description": "A survival/psychological endurance simulation based on Stephen King's The Long Walk",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && vite build",
    "preview": "vite preview",
    "start": "NODE_ENV=production tsx server/index.ts",
    "server": "tsx server/index.ts",
    "dev:all": "concurrently \"vite\" \"tsx watch server/index.ts\"",
    "validate": "tsx tests/validate.ts"
  },
  "dependencies": {
    "@hono/node-server": "^1.0.0",
    "@openai/agents": "^0.1.0",
    "dotenv": "^17.3.1",
    "hono": "^4.0.0",
    "tsx": "^4.0.0"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "devDependencies": {
    "@types/node": "^22.0.0",
    "concurrently": "^9.0.0",
    "typescript": "^5.7.0",
    "vite": "^6.0.0"
  }
}
